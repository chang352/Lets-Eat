<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/cs307spring17team26.lets_eat_"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs307spring17team26.lets_eat_.ApplicationActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted Matches"
        android:textSize="20dp"
        android:textColor="#ff6961"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/matchesListView"
        android:divider="@color/black_overlay"
        android:dividerHeight="0.5dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/list2"
        android:layout_alignParentStart="true"
        android:layout_height="175dp" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="175dp" />

    <TextView
        android:text="Pending Your Acceptance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list1"
        android:textSize="20dp"
        android:textColor="#ff6961"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/listView1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
