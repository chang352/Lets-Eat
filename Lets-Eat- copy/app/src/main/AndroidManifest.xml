<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs307spring17team26.lets_eat_">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Let's Eat!"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AccountCreationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Account Creation"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">

        </activity>
        <activity
            android:name=".LoginAccountActivity"
            android:label="Login"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ApplicationActivity"
            android:label="Let&apos;s Eat!"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ProfileSearches"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_searches_profile"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ProfileMatches"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_matches_profile"
            android:theme="@style/FullscreenTheme">

        </activity>
    </application>

</manifest>
